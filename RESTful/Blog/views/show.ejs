<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header"><%= blog.title%></div>
    <div class="ui top attached segment">
        <div class="item">
            <img class="ui centered rounded image" src="<%=blog.image%>">
            <div class="content">
                <span><%=blog.created.toDateString()%></span>
            </div>
            <div class="description">
                <p><%-blog.body%></p><!-- this "-" is to this field consider many html tags etc. but need to be more limited, to not show js scripts for example. to do this, it could use express-sanitize -->
            </div>
            <a href="/blogs/<%=blog._id%>/edit" class="ui green basic button">Edit</a>
            <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST" id="deleteForm">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>